<!-- security/security.xml -->
<odoo>
    <record id="college_management_category" model="ir.module.category">
        <field name="name">College Management</field>
        <field name="description">Access and manage College-related teacher, and student</field>
        <field name="sequence">10</field>
    </record>
    <record id="group_teacher" model="res.groups">
        <field name="name">Teacher</field>
        <field name="category_id" ref="college_management_category"/>
    </record>

    <record id="group_student" model="res.groups">
        <field name="name">Student</field>
        <field name = "category_id" ref = "college_management_category"/>
    </record>

    <record id="group_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name = "category_id" ref = "college_management_category"/>
     </record>
</odoo>
